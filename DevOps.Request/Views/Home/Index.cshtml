@using System.Net

@{
    ViewBag.Title = "Request";
    Layout = "";
}

<head>


    @* BootStrap 4 *@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    @* Custom css *@
    <link href="/Content/devops.css" rel="stylesheet" />

    @* Jquery *@

</head>

<body>
    <div class="request-title">Submit a Request</div>
    <section class="form-area">
        <form id="request-form">

            <div>
                <label> Title </label>
                <input name="title" type="text" class="form-control" placeholder="What's this about?"
                       maxlength="100" />
            </div>

            <div class="radio-options">
                <div class="form-check request">
                    <input class="form-check-input" type="radio" name="type" id="feature" value="feature" checked />
                    <label class="form-check-label" for="feature">
                        Request
                    </label>
                </div>
                <div class="form-check bug">
                    <input class="form-check-input" type="radio" name="type" id="bug" value="bug" />
                    <label class="form-check-label" for="bug">
                        Bug
                    </label>
                </div>
                <div class="form-check bug">
                    <input class="form-check-input" type="radio" name="type" id="issue" value="issue" />
                    <label class="form-check-label" for="issue">
                        Not Sure
                    </label>
                </div>
            </div>

            <div>
                <label> Description </label>
                <textarea name="description" class="form-control" placeholder="Describe the need..."></textarea>
            </div>

            <button class="btn btn-block btn-light">Submit</button>
        </form>
    </section>

    <div class="request-title nomarginbottom">Find your Requests</div>

    <div id="devopsList" class="devops-items">

        <section class="search-section">
            <i class="fa fa-search"></i>
            <input class="form-control search" type="search" placeholder="search to your hearts content ..." />
        </section>

        <section class="item-sorting">
            <div class="sort-by">Sort By:</div>
            <button class="sort" data-sort="title">
                Title
            </button>
            <button class="sort" data-sort="type">
                Type
            </button>
            <button class="sort" data-sort="state">
                State
            </button>
        </section>

        <section class="item-sorting filters">
        </section>

        <div class="list all-items">
        </div>

    </div>

    @* Jquery *@
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

    @* BootStrap *@
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    @* List JS *@
    @* https://listjs.com/ *@
    <script type="text/javascript" src="/src/list.js"></script>

    @* Custom *@
    <script src="~/Scripts/devops.js"></script>
    <script>
        userName = 'nick' // place current username here
    </script>
</body>

